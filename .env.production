# Production Environment Configuration
# Copy this to .env.production and update values

# Model Configuration
MODEL_TYPE=indictrans2
MODEL_PATH=models/indictrans2
DEVICE=cpu

# Database Configuration
DATABASE_PATH=data/translations.db
# For production, consider PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/translations

# API Configuration
DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:8501", "https://yourdomain.com"]

# Security (generate strong random keys)
SECRET_KEY=your-super-secret-key-here
API_KEY=your-api-key-here

# Performance
MAX_WORKERS=4
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=true

# External Services
REDIS_URL=redis://localhost:6379
# POSTGRES_URL=postgresql://user:password@localhost:5432/translations
